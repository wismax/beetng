<ivysettings>

	<include file="${scripts.dir}/ivysettings.xml"/>
	
	<!-- we add a class-path writer to the standard set of manifest attributes -->
	<typedef name="manifest-classpath"
			 classname="com.mtgi.ivy.plugins.triggers.publish.ManifestClassPathWriter"/>

	<triggers>
		<publish-manifest>
			<manifest-attribute attribute="Main-Class" 
								value="com.mtgi.analytics.xml.Main"/>
			<manifest-classpath pattern="lib/[artifact]-[revision].[ext]"/>
		</publish-manifest>
	</triggers>
	
</ivysettings>
