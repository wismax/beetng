<ivysettings>

    <settings defaultResolver="maven-central" validate="false"/>

    <caches checkUpToDate="false" useOrigin="true" lockStrategy="artifact-lock" default="default-cache">
    	<cache name="default-cache" basedir="${user.home}/.ivy2/cache"/>
    	<cache name="temp-cache" basedir="${java.io.tmpdir}/ivy2/cache"/>
    	<cache name="ea-cache" basedir="${user.dir}/target/cache"/>
    </caches>

    <resolvers>

		<ibiblio name="maven-central" m2compatible="true"/>
        
       	<filesystem name="shared" alwaysCheckExactRevision="false"
			 		cache="temp-cache" checkmodified="false">
            <artifact pattern="${user.dir}/repository/ivyrep/[organisation]/[module]/[revision]/[type]s/[artifact].[ext]"/>
       	</filesystem>
       	
    </resolvers>
    
</ivysettings>