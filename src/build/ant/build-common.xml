<?xml version="1.0"?>

<project name="build-common" basedir=".."
		 xmlns:ivy="antlib:org.apache.ivy.ant">
	
	<dirname property="scripts.dir" file="${ant.file.build-common}"/>
	<property name="ivysettings.file" value="${scripts.dir}/ivysettings.xml"/>
	
	<tstamp>
		<format property="touch.time" pattern="MM/dd/yyyy hh:mm"/>
	</tstamp>
	<path id="task.class.path"/>

	<!-- resolve task libraries via Ivy -->
	<ivy:settings file="${ivysettings.file}"/>
	<ivy:resolve file="${scripts.dir}/ivy-tasks.xml" conf="build"/>
	<ivy:cachepath pathid="task.class.path" conf="build"/>
	
	<!-- ant-contrib logic tag tasks -->
	<taskdef resource="net/sf/antcontrib/antlib.xml" classpathref="task.class.path"/>
	<!-- cobertura code coverage tasks -->
	<taskdef resource="tasks.properties" classpathref="task.class.path"/>
	
</project>
