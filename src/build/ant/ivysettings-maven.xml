<ivysettings>

    <settings defaultResolver="local-maven-src" validate="false"/>

    <caches checkUpToDate="false" useOrigin="true" lockStrategy="artifact-lock"
    		default="default-cache" resolutionCacheDir="${integration.dir}/maven-resolution">
    	<cache name="default-cache" basedir="${integration.dir}/maven-cache"/>
    </caches>

    <resolvers>

       	<filesystem name="local-maven-src" checkmodified="false">
	        <ivy pattern="${basedir}/repository/ivyrep/[organisation]/[module]/[revision]/[type]s/[artifact].[ext]"/>
            <artifact pattern="${basedir}/repository/ivyrep/[organisation]/[module]/[revision]/[type]s/[artifact].[ext]"/>
       	</filesystem>

       	<filesystem name="local-maven-dest" m2compatible="true" checkmodified="false">
            <artifact pattern="${basedir}/repository/maven/[organisation]/[module]/[revision]/[artifact]-[revision](-[classifier]s).[ext]"/>
       	</filesystem>

    </resolvers>
    
</ivysettings>
