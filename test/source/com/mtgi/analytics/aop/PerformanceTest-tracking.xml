<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xmlns:aop="http://www.springframework.org/schema/aop"
     xmlns:bt="http://www.mantis-tgi.com/schema/bt"
     xsi:schemaLocation="
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
     http://www.mantis-tgi.com/schema/bt classpath:com/mtgi/analytics/aop/mtgi-bt-1.0.xsd 
     http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<bt:advice id="btAdvice" application="testBT"/>
	<aop:config>
		<aop:pointcut id="trackedOperations" 
		              expression="execution(* com.mtgi.analytics.aop..*Tracked(..))"/>
		<aop:advisor advice-ref="btAdvice" pointcut-ref="trackedOperations"/>
	</aop:config>
	
	<bean id="trackingPersister" class="com.mtgi.analytics.XmlBehaviorEventPersisterImpl">
		<property name="file" value="test/tmp/perf-bin.log"/>
		<property name="binary" value="true"/>
	</bean>

	<bean id="sessionContext" class="com.mtgi.analytics.MockSessionContext">
		<property name="contextUserId" value="perfTest"/>
		<property name="contextSessionId" value="01"/>
	</bean>
	
	<!-- task queue for async persistence operations -->	
	<bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="1"/>
		<property name="maxPoolSize" value="1"/>
		<property name="queueCapacity" value="100"/>
		<property name="threadFactory">
		<bean class="org.springframework.scheduling.concurrent.CustomizableThreadFactory">
			<!-- one below normal priority, so that a full plate won't prevent request threads from doing their work -->
			<property name="threadPriority" value="4"/>
			<property name="threadNamePrefix" value="BehaviorEventPersister-"/>
		</bean>
		</property>
	</bean>
	
</beans>
